{
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    ".eslintrc.js",
    "webpack.config.ts",
    "config/jest/jest.config.ts",
    "config/jest/setupTests.ts",
    "config/jest/jestEmptyComponent.tsx",
    "config/storybook/**/*.ts",
    "config/build/**/*.ts",
    "scripts/**/*.js"
, "src/shared/config/storybook/Decorators/ThemeDecorator/themeDecorator.tss"  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",

    "paths": { 
      "*": ["./src/*"]
    }

  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
}